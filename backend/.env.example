# =============================================================================
# FastAPI Better-Auth Backend Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database Configuration (Neon PostgreSQL)
# -----------------------------------------------------------------------------
# Async database URL for SQLAlchemy (use asyncpg driver)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database

# Standard PostgreSQL URL (for Alembic migrations)
DATABASE_URL_SYNC=postgresql://user:password@host:5432/database

# -----------------------------------------------------------------------------
# Better-Auth Configuration
# -----------------------------------------------------------------------------
# Better-Auth server URL (for JWKS fetching)
BETTER_AUTH_URL=http://localhost:3000

# Better-Auth secret (must match the secret in your Better-Auth config)
BETTER_AUTH_SECRET=your-better-auth-secret-here

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
# JWT algorithm (RS256 for Better-Auth JWKS, HS256 for shared secret)
JWT_ALGORITHM=RS256

# JWT issuer (Better-Auth server URL)
JWT_ISSUER=http://localhost:3000

# JWT audience (your FastAPI backend)
JWT_AUDIENCE=http://localhost:8000

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=true

# API prefix
API_V1_PREFIX=/api/v1

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=json
